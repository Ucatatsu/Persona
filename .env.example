# Server Configuration
PORT=8080
ENV=development

# Database - Option 1: Use DATABASE_URL (recommended for Supabase/Render)
# DATABASE_URL=postgresql://postgres:password@host:5432/database

# Database - Option 2: Individual parameters
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=kvant

# Database - Option 3: SQLite (for local development)
# USE_SQLITE=true
# SQLITE_DB_PATH=./kvant.db

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS
CORS_ORIGIN=http://localhost:5173

# File Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=./uploads

# WebRTC TURN/STUN servers
TURN_SERVER_URL=turn:your-turn-server.com:3478
TURN_USERNAME=username
TURN_CREDENTIAL=password

# Redis (optional, for scaling)
REDIS_URL=redis://localhost:6379

# Cloudinary (optional, for cloud storage)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
