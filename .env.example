# Квант v2.0 - Переменные окружения

# Backend
PORT=8080
ENVIRONMENT=development

# База данных PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/kvant_v2?sslmode=disable

# JWT секрет (ОБЯЗАТЕЛЬНО поменяйте в продакшене!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-256-bit-key

# CORS (для продакшена укажите домен)
CORS_ORIGIN=http://localhost:3000

# WebSocket
WS_READ_BUFFER_SIZE=1024
WS_WRITE_BUFFER_SIZE=1024

# Файлы и медиа
MAX_FILE_SIZE=25MB
UPLOAD_PATH=./uploads

# Логирование
LOG_LEVEL=info
LOG_FORMAT=json

# Redis (опционально, для кеширования)
REDIS_URL=redis://localhost:6379

# TURN серверы для WebRTC (опционально)
TURN_SERVER_URL=
TURN_USERNAME=
TURN_PASSWORD=